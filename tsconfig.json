{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["__tests__/**/*", "scripts/**/*", "src/**/*"]
}
